<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hp.techagree.registration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="नोंदणी करा"
        android:textColor="#00ff00"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/innerLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="#8000ff00"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/reg_firstname"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="नाव"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/reg_middlename"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="मधले नाव"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />

        <EditText
            android:id="@+id/reg_surname"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="आडनाव"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/reg_mobileno"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="मोबाइल नंबर"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />

        <Spinner
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:popupBackground="#d7ffc7"
               ></Spinner>
        <EditText
            android:id="@+id/reg_username"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="वापरकर्तानाव प्रविष्ट करा"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/reg_password"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:hint="पासवर्ड तयार करा"
            android:textColorHint="#50000000"
            android:background="@drawable/roundedshape"
            android:textSize="25dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="जतन करा"
        android:background="#00ff00"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"

        />
</LinearLayout>
